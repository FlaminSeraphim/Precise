<% include ./partials/header %>

  <h1>User Edit Route</h1>

  <form action="/users/<%= user._id %>?_method=PUT" method="POST">
    <label>First Name: <input type="text" name="user[firstname]" value="<%= user.firstname %>"> </label> <br>
    <label>Last Name: <input type="text" name="user[lastname]" value="<%= user.lastname %>"> </label> <br>
    <label>Okey username: <input type="text" name="user[username]" value="<%= user.username %>"> </label> <br>
    <label>Title: <input type="text" name="user[title]" value="<%= user.title %>"> </label> <br>
    <label>Password: <input type="text" name="user[password]" value="<%= user.password %>"> </label> <br>
    <label>Department: <input type="text" name="user[department]" value="<%= user.department %>"> </label> <br>
    <label>Clinic: <input type="text" name="user[clinic]" value="<%= user.clinic %>"> </label> <br>
    <label>Email Address: <input type="text" name="user[emailAddress]" value="<%= user.emailAddress %>"> </label> <br>
    <label>Instructor: <input type="text" name="user[instructor]" value="<%= user.instructor %>"> </label> <br>
    <label>Manager: <input type="text" name="user[manager]" value="<%= user.manager %>"> </label> <br>
    <label>Cell Phone: <input type="number" name="user[phone]" value="<%= user.phone %>"> </label> <br>
    <label>Is a Manager: <input type="checkbox" name="user[isManager]" value="<%= user.isManager %>"> </label> <br>
    <label>Is a Administrator <input type="checkbox" name="user[administrator]" value="<%= user.administrator %>"> </label> <br>
    <input type="submit" value="Submit Here">

  </form>

<% include ./partials/footer %>
