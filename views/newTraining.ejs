<% include ./partials/header %>

  <h1>This is the new training page where you can create new trianings.</h1>

  <form action="/training" method="POST">
    <label>Training Date: <input type="date" name="training[date]"> </label><br>
    <label>Training Time: <input type="time" name="training[time]"> </label> <br>
    <label>Course <input type="text" name="course[training]"></input> </label> <br>
    <label>Training Location: <input type="text" name="training[location]"> </label> <br>
    <label>Training Status: <input type="text" name="training[status]"> </label> <br>
    <input type="submit">
    <input type="submit" value="Add Another">
  </form> <br>

  <% training.forEach(function(training){ %>
      <p> <%= training.name %> </p>
      <p> <%= training._id %> </p>
    <% }); %>


